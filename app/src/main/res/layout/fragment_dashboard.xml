<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment"
    android:padding="25dp">

    <TextView
        android:id="@+id/tv_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textSize="25dp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find anything what you want!"
        android:textSize="15dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_dashboard"/>

    <ImageButton
        android:id="@+id/btn_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_dashboard"
        app:layout_constraintBottom_toBottomOf="@id/tv_txt2"
        android:src="@drawable/restore"
        android:scaleType="fitXY"
        android:background="?android:selectableItemBackground"/>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_history"
        android:layout_marginTop="25dp"
        app:layout_constraintHeight_percent="0.15"
        android:background="@drawable/et_box2"/>

    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame2"
        app:layout_constraintBottom_toBottomOf="@id/frame2"
        app:layout_constraintWidth_percent="0.5"
        android:background="@drawable/btn2"/>

    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame3"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHeight_percent="0.05"
        android:background="@drawable/et_box2"/>

    <FrameLayout
        android:id="@+id/frame5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame4"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.275"/>

    <FrameLayout
        android:id="@+id/frame6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame5"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHeight_percent="0.05"
        android:background="@drawable/et_box2"/>

    <FrameLayout
        android:id="@+id/frame7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame6"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.275"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame3"
        app:layout_constraintBottom_toBottomOf="@id/frame3"
        app:layout_constraintRight_toRightOf="@id/frame3"
        app:layout_constraintLeft_toLeftOf="@id/frame3"
        android:text="50%"
        android:textSize="75dp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/frame3"
        app:layout_constraintTop_toTopOf="@id/frame2"
        app:layout_constraintBottom_toBottomOf="@id/frame2"
        app:layout_constraintRight_toRightOf="@id/frame2"
        android:text="@string/txt"
        android:fontFamily="@font/inter"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="top"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/frame3"
        app:layout_constraintTop_toTopOf="@id/frame2"
        app:layout_constraintBottom_toBottomOf="@id/frame2"
        app:layout_constraintRight_toRightOf="@id/frame2"
        android:text="* terms and conditions apply"
        android:fontFamily="@font/inter"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="bottom"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/frame3"
        app:layout_constraintTop_toTopOf="@id/frame2"
        app:layout_constraintBottom_toBottomOf="@id/frame2"
        app:layout_constraintRight_toRightOf="@id/frame2"
        android:text="OFF"
        android:fontFamily="@font/inter"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame4"
        app:layout_constraintBottom_toBottomOf="@id/frame4"
        app:layout_constraintLeft_toLeftOf="@id/frame4"
        app:layout_constraintRight_toRightOf="@id/frame4"
        android:textAlignment="center"
        android:gravity="center"
        android:text="CLOTHES"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame6"
        app:layout_constraintBottom_toBottomOf="@id/frame6"
        app:layout_constraintLeft_toLeftOf="@id/frame6"
        app:layout_constraintRight_toRightOf="@id/frame6"
        android:textAlignment="center"
        android:gravity="center"
        android:text="PANTS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame5"
        app:layout_constraintBottom_toBottomOf="@id/frame5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/frame5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_1"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_2"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_3"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_4"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame7"
        app:layout_constraintBottom_toBottomOf="@id/frame7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/frame7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_5"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview6"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_7"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview7"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview8"
                android:layout_width="150dp"
                android:layout_height="155dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:src="@drawable/img_8"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </HorizontalScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>